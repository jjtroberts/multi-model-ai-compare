# .env.example - Environment variables template
# Copy this to .env and fill in your values

# Multi-Model AI Comparison Tool - Complete Configuration

# =====================================================================
# API Keys (Required)
# =====================================================================
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  
GOOGLE_API_KEY=your_google_api_key_here

# =====================================================================
# Default Models - Auto-selected on app start
# =====================================================================
DEFAULT_CLAUDE_MODEL=claude-3-5-sonnet-20241022
DEFAULT_OPENAI_MODEL=gpt-4o
DEFAULT_GEMINI_MODEL=gemini-1.5-pro-latest

# =====================================================================
# Model Preferences by Use Case
# =====================================================================
# Fast/Quick responses (lower cost, faster)
FAST_CLAUDE_MODEL=claude-3-5-haiku-20241022
FAST_OPENAI_MODEL=gpt-4o-mini
FAST_GEMINI_MODEL=gemini-1.5-flash-latest

# High Quality responses (higher cost, better quality)
QUALITY_CLAUDE_MODEL=claude-3-5-sonnet-20241022
QUALITY_OPENAI_MODEL=gpt-4o
QUALITY_GEMINI_MODEL=gemini-1.5-pro-latest

# Cost-effective models (lowest cost)
COST_CLAUDE_MODEL=claude-3-5-haiku-20241022
COST_OPENAI_MODEL=gpt-4o-mini
COST_GEMINI_MODEL=gemini-1.5-flash-latest

# =====================================================================
# Budget Tracking & Usage Limits
# =====================================================================
TRACK_USAGE=true
DAILY_BUDGET_USD=1.00
MONTHLY_BUDGET_USD=5.00
BUDGET_ALERT_THRESHOLD=0.8
BUDGET_HARD_LIMIT=true

# =====================================================================
# Application Configuration
# =====================================================================
DEBUG_MODE=false
LOG_LEVEL=INFO
METRICS_ENABLED=true
AUTO_SELECT_MODELS=true
DEFAULT_USE_CASE=default
REMEMBER_MODEL_SELECTIONS=true

# =====================================================================
# UI/UX Settings
# =====================================================================
ENABLE_COPY_BUTTONS=true
SHOW_BUDGET_DASHBOARD=true
SHOW_USAGE_METRICS=true
DEFAULT_COMPARISON_MODE=Side by Side

# =====================================================================
# Network & Performance
# =====================================================================
HOST_PORT=8501
DOMAIN=localhost
CLAUDE_TIMEOUT=60
OPENAI_TIMEOUT=60
GEMINI_TIMEOUT=60
MAX_SESSION_DURATION=3600
HEALTH_CHECK_INTERVAL=300